<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="masterautod.View.bmw"
             Title="BWM">
    <ContentPage.Content>
        <StackLayout BackgroundColor="LightBlue" HorizontalOptions="Center" Margin="10">
            <Label VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black"
                   FontSize="Large" Text="Внутренности BMW" BackgroundColor="LightCoral"/>
            <Image x:Name="foto1" Source="bmw2.jpg"/>
            <Picker x:Name="modelbmw" SelectedIndexChanged="modelbmw_SelectedIndexChanged" BackgroundColor="White">
                <Picker.Items>
                    <x:String>Salong-Салон</x:String>
                    <x:String>Rool-Руль</x:String>
                    <x:String>Tagavaade-Задний вид</x:String>
                    <x:String>Kohad-Сиденья</x:String>
                    <x:String>Külgvaade-Боковой вид</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>