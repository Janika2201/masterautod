        <StackLayout Padding="15" BackgroundColor="AntiqueWhite">
            <Label VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black" FontSize="Large" Text="Модели машин марки Chevroleto" BackgroundColor="DarkGoldenrod"/>
            <Image x:Name="foto1" Source="chevr.png"/>
