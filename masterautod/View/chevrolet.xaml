                <Picker.Items>
                    <x:String>Corvette</x:String>
                    <x:String>Camaro</x:String>
                    <x:String>Silverado</x:String>
                    <x:String>Onix</x:String>
                </Picker.Items>
            </Picker>
            <Label x:Name="txt" Text=""></Label>
            <Label x:Name="txt1" Text=""></Label>
            <Label x:Name="txt2" Text=""></Label>
            <Label x:Name="txt3" Text=""></Label>
            <Label x:Name="txt4" Text=""></Label>
            <Label x:Name="txt5" Text=""></Label>
            <Label x:Name="txt6" Text=""></Label>
            <Button x:Name="btn" Text="Магазин"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>