<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="masterautod.View.chevrolet">
    <ContentPage.Content>
        <StackLayout Padding="15">
            <Label VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black" FontSize="Large" Text="Модели машин марки Chevroleto" />
            <Image x:Name="foto1" Source="chevr.png"/>
            <Picker x:Name="sevrolemodel" SelectedIndexChanged="sevrolemodel_SelectedIndexChanged">

                <Picker.Items>
                    <x:String>Corvette</x:String>
                    <x:String>Camaro</x:String>
                    <x:String>Silverado</x:String>
                    <x:String>Onix</x:String>
                </Picker.Items>
            </Picker>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>