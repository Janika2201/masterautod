            <Image x:Name="foto1" Source="moskvits.png"/>
            <Picker x:Name="moskvitmodel" SelectedIndexChanged="moskvitmodel_SelectedIndexChanged" BackgroundColor="White">
                <Picker.Items>
                    <x:String>Moskvits 403</x:String>

                    <x:String>Moskvits 401</x:String>
